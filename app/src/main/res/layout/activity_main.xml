<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.ml.android.melitraining.app.MainActivity">


    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_centerInParent="true"
                  android:id="@+id/edit_container"
                  android:gravity="center_vertical">

        <EditText android:layout_width="200dp"
                  android:layout_height="50dp"
                  android:id="@+id/input"
                  android:editable="false"/>

        <ImageView android:layout_width="60dp" android:layout_height="60dp"
                   android:layout_marginLeft="5dp"
                   android:src="@drawable/ic_action_bar_search"
                   android:scaleType="centerInside"/>

    </LinearLayout>


    <TextView
            android:text="@string/txt_producto_a_buscar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/main_product_selection_textsize"
            android:id="@+id/text1"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true" android:layout_toLeftOf="@+id/edit_container"/>


</RelativeLayout>
