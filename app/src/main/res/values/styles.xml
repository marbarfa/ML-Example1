<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Sherlock.Light">
        <!-- Customize your theme here. -->
    </style>

    <style name="first_column">
        <item name="android:layout_width">@dimen/itemdetail_firstcolumn_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/itemdetail_textsize</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="second_column">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/itemdetail_textsize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="searchrow_item_txt">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>
